<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="pinLoginAct"
            type="com.example.bizmekatalk.activity.PinLoginActivity" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="260dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:src="@drawable/pinlogo"
                />
            <LinearLayout
                android:id="@+id/pinLinear"
                android:layout_width="200dp"
                android:weightSum="4"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                >
                <ImageView
                    android:tag="pinDot0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shape_round_black"/>
                <ImageView
                    android:tag="pinDot1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shape_round_black"/>
                <ImageView
                    android:tag="pinDot2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shape_round_black"/>
                <ImageView
                    android:tag="pinDot3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shape_round_black"/>

            </LinearLayout>

            <include
                android:id="@+id/pinButtons"
                layout="@layout/pin_button_layout"
                />

            <RelativeLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/pinLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:hint="로그인" />

                <TextView
                    android:id="@+id/pinRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"
                    android:hint="지우기" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</layout>
